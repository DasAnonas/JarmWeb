          <div class="carousel-inner">
            <div class="carousel-item active" number="1">
              <div class="row justify-content-center">
                <div class="col-12" style="text-align: center; padding-bottom: 0.9rem;">
                  <span class="text-big map-number">01</span>
                  <span class="about-pics-header" style="font-weight: 400; text-align: start; margin-left: 0.5rem;"><%= text.about_map[0].header %></span>
                  </div>
                <div class="col-5 col-md-4 px-0">
                  <img src="/images/about-map-1.svg" style="width: 100%">
                  </div>
                </div>
            </div>
            <div class="carousel-item" number="2">
              <div class="row justify-content-center">
                <div class="col-12" style="text-align: center; padding-bottom: 0.9rem;">
                  <span class="text-big map-number">02</span>
