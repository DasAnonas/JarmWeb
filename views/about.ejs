  <%- include('./parts/footer') -%>

  <script>
    $('.carousel').carousel({
      interval: false
    })
    $('#map-mobile-carousel').on('slide.bs.carousel', function() {
    const num = parseInt($('.carousel-item.active').attr("number"))
    setTimeout( function() {
      let nextNum = parseInt($('.carousel-item-next').attr("number"))
      if (!nextNum) {
        nextNum = parseInt($('.carousel-item-prev').attr("number"))
      }
      $('#map-text-mobile').animate({
        opacity: "0"
      }, 200)
      setTimeout( function() {
      $('#map-text-mobile').html($('#map-text-' + nextNum.toString()).html())
      $('#map-text-mobile').animate({
        opacity: "1"
      }, 200)
    }, 200)
      $('.slider-indicator:nth-child(' + num.toString() + ')').toggleClass('slider-indicator-active')
      $('.slider-indicator:nth-child(' + nextNum.toString() + ')').toggleClass('slider-indicator-active')
  }, 2)
    })
    $('.slider-indicator').on('click', function(){
      $('#map-mobile-carousel').carousel(parseInt($(this).attr('number')) - 1)
    })

  </script>
